    <script>

    $(document).ready(function() {

        {block:ifAccordionMenu}

        // Menu

        var navPages = $('.nav-pages'),
            menuToggle = $('.menu-toggle'),
            menuCarent = $('.menu-caret');

        function revealMenu() {
            navPages.slideToggle();
            menuCarent.toggleClass('fa-angle-up fa-angle-down');
        }

        menuToggle.on('click', revealMenu);

        {/block:ifAccordionMenu}

        {block:ifSearch}

        // Search

        var inputSearch = $('.input-search');

        function fillSearch() {
            if (inputSearch.val() == '')
            inputSearch.val('{lang:Search}');
        }

        fillSearch();
        
        inputSearch.focus(function() {
            if ($(this).val() == '{lang:Search}') 
                $(this).val('');
        });
        inputSearch.blur(function() {
            fillSearch();
        });

        {/block:ifSearch}

        // Photoset

        var gridOptions = {
            highresLinks: true,
            rel: $('.photoset-grid').attr('data-id'),
            gutter: '2px'
        };
        
        $('.photoset-grid').photosetGrid(gridOptions);

        // Load More + Inifinite Scroll

        var loadMore = $('.load-more'),
            page = 2,
            
            loading = false,
            loadingText = '{lang:Loading}',
            loadMoreText = '{lang:Load more posts}',
            noMoreText = '{lang:No more posts}';
            

        function getMorePosts() {
            var newPosts = '';
            if (location.href.indexOf('/tagged/') != -1 || location.href.indexOf('/search/') != -1)
                 newPosts = location.href + '/page/' + page;
            else
                newPosts = '/page/' + page;

            var posts = $('.posts');
                    
            loadMore.html(loadingText);
            
            $.ajax(newPosts).done(function(response) {
                var data = $(response).find('.posts-inner');
                
                if (data.find('.post').length != 0) {
                    posts.append(data);
                    page++;
                    Tumblr.LikeButton.get_status_by_page(page);
                    $('.photoset-grid').photosetGrid(gridOptions);
                    loadMore.html(loadMoreText);
                }
                else {
                    loadMore.html(noMoreText);
                    setTimeout(function() {
                        loadMore.fadeOut();
                    }, 3000);
                    {block:ifLoadMoreButton}
                    loadMore.off();
                    {/block:ifLoadMoreButton}
                    {block:ifInfiniteScroll}
                    $(window).off('scroll', infiniteScroll);
                    {/block:ifInfiniteScroll}
                }
                
                loading = false;
            }); // /.done
        }

        {block:ifLoadMoreButton}
        {block:Pagination}
        loadMore.on('click', function() {
            if (loading) {
                return false;
            }
            else {
                loading = true;
                getMorePosts();   
            }
        });
        {/block:Pagination}
        {/block:ifLoadMoreButton}
        
        {block:ifInfiniteScroll}
        {block:Pagination}
        function infiniteScroll() {
            if (loading) {
                return false;
            }
            else if ($(window).scrollTop() >= $(document).height() - ($(window).height() * 2)) {
                loading = true;
                getMorePosts();
            }
        }

        $(window).on('scroll', infiniteScroll);
        {/block:Pagination}
        {/block:ifInfiniteScroll}

    });
    function change_css(){
    var oLink = document.createElement("link") 
    oLink.href = "http://static.tumblr.com/2fwdkjd/2sCne16sa/night-mode.css"; //new css filename
    oLink.rel = "stylesheet"; 
    oLink.type = "text/css"; 
    document.body.appendChild(oLink);
}
    function change_css2(){
    var oLink = document.createElement("link") 
    oLink.href = "http://static.tumblr.com/2fwdkjd/y2Wne15o8/day-mode.css"; //new css filename
    oLink.rel = "stylesheet"; 
    oLink.type = "text/css"; 
    document.body.appendChild(oLink);
}
    </script>
    <script>  
</script>  
